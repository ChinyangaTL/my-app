generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FacilityType {
  PHARMARCY
  CLINIC
  HOSPITAL
}

model Facility {
  id String @id @default(uuid())
  identifier String? @unique 
  password String
  name String
  type FacilityType
  address String
  district String
  phoneNumber String
  isVerified Boolean @default(false)
  drugItems DrugItem[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  phoneNumber String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DrugItem {
  id String @id @default(uuid())
  facility Facility @relation(fields: [facilityId], references: [id])
  facilityId String
  brandName String?
  genericName String
  strengthsAvailable String[]
  quantity Int
  units String
  price Float
  expiryDate DateTime
  isControlledSubstance Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}